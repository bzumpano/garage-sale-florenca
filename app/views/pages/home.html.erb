<% content_for :title, t('app.title') %>

<%# Homepage-specific meta tags for better social sharing %>
<% content_for :meta_tags do %>
  <meta property="og:title" content="🛒 Venda de Garagem da Aurora - Residencial Florença">
  <meta property="og:description" content="Bem-vindos ao nosso brechó online! Encontre tesouros únicos com preços especiais. Produtos para toda a família no Residencial Florença. ✨">
  <meta property="og:image" content="<%= request.base_url %>/icon.png">
  <meta property="og:type" content="website">
  <meta property="og:url" content="<%= root_url %>">
  <!-- Twitter Card Meta Tags -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="🛒 Venda de Garagem da Aurora - Residencial Florença">
  <meta name="twitter:description" content="Bem-vindos ao nosso brechó online! Encontre tesouros únicos com preços especiais. Produtos para toda a família no Residencial Florença. ✨">
  <meta name="twitter:image" content="<%= request.base_url %>/icon.png">
<% end %>

<div class="w-full px-0 py-0">
  <!-- Full-width Garage Sale Banner -->
  <div class="w-full bg-gradient-to-br from-yellow-100 via-pink-100 to-blue-100 dark:from-yellow-900 dark:via-pink-900 dark:to-blue-900 shadow-2xl rounded-b-3xl pb-10 pt-8 px-4 md:px-0 text-center relative overflow-hidden">
    <!-- Playful Garage Sale SVG Illustration -->
    <div class="mx-auto mb-4 flex justify-center" style="max-width: 420px;">
      <svg width="100%" height="140" viewBox="0 0 420 140" fill="none" xmlns="http://www.w3.org/2000/svg">
        <!-- Garage -->
        <rect x="60" y="60" width="300" height="60" rx="12" fill="#fff" stroke="#3B82F6" stroke-width="4"/>
        <rect x="120" y="90" width="60" height="30" rx="6" fill="#F59E0B" stroke="#D97706" stroke-width="2"/>
        <rect x="240" y="90" width="60" height="30" rx="6" fill="#F59E0B" stroke="#D97706" stroke-width="2"/>
        <!-- Roof -->
        <polygon points="60,60 210,20 360,60" fill="#FBBF24" stroke="#F59E0B" stroke-width="4"/>
        <!-- Sale sign -->
        <rect x="20" y="30" width="60" height="28" rx="6" fill="#EF4444" stroke="#DC2626" stroke-width="2"/>
        <text x="50" y="50" font-family="Arial, sans-serif" font-size="18" font-weight="bold" fill="#fff" text-anchor="middle">SALE</text>
        <!-- Items -->
        <ellipse cx="90" cy="120" rx="14" ry="8" fill="#A78BFA"/>
        <rect x="320" y="110" width="24" height="16" rx="4" fill="#34D399"/>
        <circle cx="370" cy="120" r="10" fill="#F472B6"/>
        <!-- Balloons -->
        <ellipse cx="370" cy="40" rx="12" ry="18" fill="#60A5FA"/>
        <ellipse cx="390" cy="30" rx="10" ry="15" fill="#F472B6"/>
        <rect x="368" y="58" width="4" height="18" rx="2" fill="#60A5FA"/>
        <rect x="388" y="45" width="4" height="18" rx="2" fill="#F472B6"/>
        <!-- Confetti -->
        <circle cx="80" cy="30" r="3" fill="#F87171"/>
        <circle cx="340" cy="30" r="3" fill="#FBBF24"/>
        <circle cx="200" cy="40" r="3" fill="#34D399"/>
      </svg>
    </div>
    <h1 class="text-3xl md:text-4xl font-extrabold text-blue-800 dark:text-white mb-3 flex flex-col items-center gap-1" style="letter-spacing: 1px;">
      <span>🛒 <%= t('home.banner') %> 🏷️</span>
      <span class="text-xl md:text-2xl mt-1">Find treasures, make memories!</span>
    </h1>
    <p class="text-lg md:text-xl text-blue-700 dark:text-blue-200 mb-8 font-medium">
      <%= t('home.welcome_message') %>
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <%= link_to products_path, class: 'inline-flex items-center justify-center px-8 py-5 text-lg font-bold text-white bg-gradient-to-r from-pink-400 via-yellow-400 to-blue-500 rounded-full shadow-lg hover:scale-105 focus:ring-4 focus:ring-blue-300 dark:from-pink-600 dark:via-yellow-500 dark:to-blue-700 dark:focus:ring-blue-800 transition-all', style: 'font-size: 1.5rem; min-width: 200px;' do %>
        <svg class="w-7 h-7 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        <span><%= t('home.browse_items') %></span>
      <% end %>
      <%= link_to t('home.see_all_products'), products_path, class: 'inline-flex items-center justify-center px-8 py-5 text-lg font-bold text-blue-700 bg-white border-2 border-blue-300 rounded-full shadow hover:bg-blue-50 focus:ring-4 focus:ring-blue-300 dark:bg-gray-900 dark:text-blue-200 dark:border-blue-700 dark:hover:bg-blue-800 dark:focus:ring-blue-800 transition-all', style: 'font-size: 1.5rem; min-width: 200px;' %>
    </div>
    <!-- Wavy divider for mobile-native feel -->
    <div class="absolute left-0 right-0 bottom-0" style="height: 32px; pointer-events: none;">
      <svg viewBox="0 0 480 32" fill="none" xmlns="http://www.w3.org/2000/svg" width="100%" height="32">
        <path d="M0 16 Q120 32 240 16 T480 16 V32 H0 V16Z" fill="#fff" fill-opacity="0.7"/>
      </svg>
    </div>
  </div>
</div> 
