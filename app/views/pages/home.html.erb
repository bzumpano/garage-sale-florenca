        <div class="tooltip-arrow" data-popper-arrow></div>
    </div>
  </div>

  <!-- Flowbite Alert Component -->
  <div class="mb-8">
    <h2 class="text-2xl font-semibold mb-4">Alert Component</h2>
    <div id="alert-1" class="flex p-4 mb-4 text-blue-800 border border-blue-300 rounded-lg bg-blue-50 dark:bg-gray-800 dark:text-blue-400 dark:border-blue-800" role="alert">
