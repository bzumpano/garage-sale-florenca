<% content_for :title, t('common.edit') %>

<!-- Mobile header: Back and Save buttons -->
<div class="flex items-center justify-between sm:hidden mb-4">
  <button type="button" onclick="history.back()" class="text-blue-600 hover:underline flex items-center"><i class="fa fa-chevron-left mr-2"></i>Voltar</button>
  <button type="button" onclick="document.querySelector('form').requestSubmit()" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition font-semibold"><i class="fa fa-save mr-1"></i><%= t('products.form.submit') %></button>
</div>

<h1 class="text-2xl font-bold text-gray-800 mb-6"><%= t('common.edit') %></h1>

<%= render "form", product: @product %>

<div class="mt-6 flex gap-4">
  <%= link_to t('products.index.see_details'), @product, class: 'text-blue-600 hover:underline' %>
  <%= link_to t('common.back'), products_path, class: 'text-gray-600 hover:underline hidden sm:inline' %>
</div>
