          container.appendChild(deleteBtn);
          preview.appendChild(container);
          
          // Read the file and set the image source
          var reader = new FileReader();
          reader.onload = function(ev) {
            img.src = ev.target.result;
          };
          reader.readAsDataURL(file);
        });
        
        // Reset the flag after processing
        isProcessingDesktopFiles = false;
      }
    };
    
    input.addEventListener('change', originalInputChangeHandler);
  }

  // Simple fix: Disable original input on mobile when modal is used
  document.addEventListener('click', function(e) {
    if (e.target && (e.target.id === 'choose-camera-row' || e.target.id === 'choose-gallery-row')) {
      // Prevent event from bubbling up
      e.preventDefault();
      e.stopPropagation();
      e.stopImmediatePropagation();
      
