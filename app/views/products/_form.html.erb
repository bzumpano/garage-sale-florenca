          img.className = 'w-full h-full object-cover';
          
          // Create delete button for new images
          var deleteBtn = document.createElement('button');
          deleteBtn.type = 'button';
          deleteBtn.className = 'absolute -top-2 -right-2 bg-red-500 hover:bg-red-600 text-white rounded-full p-1 shadow-lg transition-colors remove-new-image-btn';
          deleteBtn.setAttribute('data-file-index', index);
          deleteBtn.setAttribute('aria-label', 'Remove image');
          deleteBtn.innerHTML = `
