<%= form_with(model: product, local: true, html: { class: 'max-w-2xl mx-auto space-y-8 bg-white dark:bg-gray-800 rounded-2xl shadow-2xl border-4 border-pink-200 dark:border-pink-700 p-8', multipart: true, data: { direct_upload: true } }) do |form| %>
  <% if product.errors.any? %>
    <div class="flex p-4 mb-6 text-red-800 border border-red-300 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400 dark:border-red-800" role="alert">
      <svg class="flex-shrink-0 w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
        <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
      </svg>
      <span class="sr-only">Error</span>
      <div class="ms-3 text-sm font-medium">
        <h2 class="font-bold mb-2"><%= pluralize(product.errors.count, "erro") %> proibiu este produto de ser salvo:</h2>
        <ul class="list-disc pl-5 space-y-1">
          <% product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  
  <!-- Product Name -->
  <div class="mb-5">
    <%= form.label :name, t('products.form.name'), class: 'block mb-2 text-lg font-bold text-blue-900 dark:text-white flex items-center gap-2' %>
    <span class="text-pink-500">üõí</span>
    <%= form.text_field :name, 
        class: "bg-gray-50 border-2 border-pink-200 text-gray-900 text-lg rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 dark:bg-gray-700 dark:border-pink-700 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 #{'border-red-500 dark:border-red-500' if product.errors[:name].any?}", 
        placeholder: t('products.form.name_placeholder', default: 'Digite o nome do produto'), 
        required: true %>
    <% if product.errors[:name].any? %>
      <p class="mt-2 text-sm text-red-600 dark:text-red-500"><%= product.errors[:name].first %></p>
    <% end %>
  </div>
  
  <!-- Product Price -->
  <div class="mb-5">
    <%= form.label :price, t('products.form.price'), class: 'block mb-2 text-lg font-bold text-blue-900 dark:text-white flex items-center gap-2' %>
    <span class="text-yellow-400">‚≠ê</span>
    <%= form.number_field :price, 
        step: '0.01', 
        min: '0', 
        class: "bg-gray-50 border-2 border-yellow-200 text-gray-900 text-lg rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 dark:bg-gray-700 dark:border-yellow-700 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 #{'border-red-500 dark:border-red-500' if product.errors[:price].any?}", 
        placeholder: t('products.form.price_placeholder', default: '0.00'), 
        required: true %>
    <% if product.errors[:price].any? %>
      <p class="mt-2 text-sm text-red-600 dark:text-red-500"><%= product.errors[:price].first %></p>
    <% end %>
  </div>
  
  <!-- Product Details -->
  <div class="mb-5">
    <%= form.label :details, t('products.form.details'), class: 'block mb-2 text-lg font-bold text-blue-900 dark:text-white flex items-center gap-2' %>
    <span class="text-green-500">üìù</span>
    <%= form.rich_text_area :details, 
        class: "bg-gray-50 border-2 border-green-200 text-gray-900 text-lg rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 dark:bg-gray-700 dark:border-green-700 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 trix-content #{'border-red-500 dark:border-red-500' if product.errors[:details].any?}", 
        placeholder: t('products.form.details_placeholder', default: 'Descreva o produto...') %>
    <% if product.errors[:details].any? %>
      <p class="mt-2 text-sm text-red-600 dark:text-red-500"><%= product.errors[:details].first %></p>
    <% end %>
  </div>
  
  <!-- Hidden field for remove_image_ids -->
  <%= form.hidden_field :remove_image_ids, value: '', id: 'remove_image_ids_field' %>
  
  <!-- Image Upload Section -->
  <div class="mb-5">
    <label class="block mb-2 text-lg font-bold text-blue-900 dark:text-white flex items-center gap-2">
      <span class="text-purple-500">üñºÔ∏è</span>
      <%= t('products.form.images', default: 'Imagens') %>
    </label>
    
    <!-- Existing Images Preview -->
    <% if product.images.attached? %>
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4 mb-4" id="existing-images-preview">
        <% product.images.each do |image| %>
          <div class="relative group">
            <div class="aspect-square w-full overflow-hidden rounded-lg border-2 border-gray-200 dark:border-gray-600">
              <%= image_tag image.variant(resize_to_fill: [120, 120]), 
                  class: 'w-full h-full object-cover' %>
            </div>
            <button type="button" 
                    class="absolute -top-2 -right-2 bg-red-500 hover:bg-red-600 text-white rounded-full p-1 shadow-lg transition-colors remove-image-btn" 
                    data-image-id="<%= image.id %>"
                    aria-label="Remove image">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
        <% end %>
      </div>
    <% end %>
    
    <!-- New Images Preview -->
    <div id="uploaded-images-preview" class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4 mb-4"></div>
    
    <!-- File Upload Input -->
    <div class="flex items-center justify-center w-full">
      <label for="product-images-input" class="flex flex-col items-center justify-center w-full h-32 border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-gray-50 dark:hover:bg-gray-800 dark:bg-gray-700 hover:bg-gray-100 dark:border-gray-500 dark:hover:border-gray-400">
        <div class="flex flex-col items-center justify-center pt-5 pb-6">
          <svg class="w-8 h-8 mb-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 16">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 13h3a3 3 0 0 0 0-6h-.025A5.56 5.56 0 0 0 16 6.5 5.5 5.5 0 0 0 5.207 5.021C5.137 5.017 5.071 5 5 5a4 4 0 0 0 0 8h2.167M10 15V6m0 0L8 8m2-2 2 2"/>
          </svg>
          <p class="mb-2 text-sm text-gray-500 dark:text-gray-400">
            <span class="font-semibold">Clique para fazer upload</span> ou arraste e solte
          </p>
          <p class="text-xs text-gray-500 dark:text-gray-400">PNG, JPG, GIF at√© 10MB cada</p>
        </div>
        <input id="product-images-input" 
               name="product[images][]" 
               type="file" 
               accept="image/*" 
               multiple 
               data-direct-upload="true" 
               class="hidden" 
               style="position: absolute; opacity: 0; pointer-events: none; z-index: -1; display: none;" />
      </label>
    </div>
    
    <!-- Helper Text -->
    <div class="mt-2 text-sm text-gray-500 dark:text-gray-400">
      <p>M√°ximo de 20 imagens, cada uma at√© 10MB. Apenas arquivos de imagem s√£o permitidos.</p>
      <p class="mt-1">Em dispositivos m√≥veis, voc√™ pode tirar uma foto ou escolher da galeria.</p>
    </div>
    
    <!-- Mobile Image Source Modal -->
    <div id="image-source-modal" class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full">
      <div class="relative w-full max-w-md max-h-full">
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
          <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
              Escolher fonte da imagem
            </h3>
            <button type="button" id="close-image-source-modal-x" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white">
              <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
              </svg>
              <span class="sr-only">Close modal</span>
            </button>
          </div>
          <div class="p-4 md:p-5">
            <div class="space-y-4">
              <button type="button" id="choose-camera-row" class="w-full flex items-center p-4 text-left text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:hover:bg-gray-700">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <span class="text-lg font-medium">Tirar foto com a C√¢mera</span>
              </button>
              <button type="button" id="choose-gallery-row" class="w-full flex items-center p-4 text-left text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:hover:bg-gray-700">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <span class="text-lg font-medium">Abrir Galeria</span>
              </button>
            </div>
          </div>
          <div class="flex items-center justify-end p-4 md:p-5 border-t border-gray-200 rounded-b dark:border-gray-600">
            <button type="button" id="close-image-source-modal" class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-500 dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-600">
              Cancelar
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Submit Button -->
  <div class="flex justify-end mt-8">
    <%= form.submit t('products.form.submit'), 
        class: 'text-white bg-gradient-to-r from-pink-400 via-yellow-400 to-blue-500 hover:scale-105 focus:ring-4 focus:outline-none focus:ring-blue-300 font-bold rounded-full text-lg px-8 py-5 text-center dark:from-pink-600 dark:via-yellow-500 dark:to-blue-700 dark:focus:ring-blue-800 transition-all',
        style: 'min-width: 200px;' %>
  </div>
<% end %>

<script>
function setupProductFormImageUpload() {
  var removeImageIdsField = document.getElementById('remove_image_ids_field');
  var removedImageIds = [];

  // Remove image logic for existing images
  document.querySelectorAll('.remove-image-btn').forEach(function(btn) {
    btn.addEventListener('click', function() {
      var imageId = btn.getAttribute('data-image-id');
      if (imageId) {
        removedImageIds.push(imageId);
        removeImageIdsField.value = removedImageIds.join(',');
        btn.closest('.group').style.display = 'none';
      }
    });
  });

  var input = document.getElementById('product-images-input');
  var preview = document.getElementById('uploaded-images-preview');
  const MAX_IMAGES = 20;
  const MAX_SIZE_MB = 10;

  function getCurrentImageCount() {
    let existing = document.querySelectorAll('#existing-images-preview .group:not([style*="display: none"])').length;
    let newFiles = input && input.files ? input.files.length : 0;
    let previewFiles = document.querySelectorAll('#uploaded-images-preview .group').length;
    return existing + newFiles + previewFiles;
  }

  // Function to show modal
  function showModal() {
    var modal = document.getElementById('image-source-modal');
    if (modal) {
      modal.classList.remove('hidden');
      modal.classList.add('flex');
      document.body.style.overflow = 'hidden';
    }
  }

  // Function to hide modal
  function hideModal() {
    var modal = document.getElementById('image-source-modal');
    if (modal) {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
      document.body.style.overflow = '';
    }
  }

  // Function to append files to existing ones
  function appendFilesToInput(newFiles) {
    var dt = new DataTransfer();
    var existingFiles = input.files;
    
    // Add existing files
    for (var i = 0; i < existingFiles.length; i++) {
      dt.items.add(existingFiles[i]);
    }
    
    // Add new files
    for (var i = 0; i < newFiles.length; i++) {
      dt.items.add(newFiles[i]);
    }
    
    // Temporarily disable the desktop handler to prevent it from processing these files
    var wasProcessing = isProcessingDesktopFiles;
    isProcessingDesktopFiles = true;
    
    // Set the files
    input.files = dt.files;
    
    // Re-enable the desktop handler
    isProcessingDesktopFiles = wasProcessing;
  }

  // Function to process new files without clearing existing preview
  function processNewFiles(files, startIndex) {
    files.forEach(function(file, index) {
      if (!file.type.startsWith('image/')) {
        alert('Apenas arquivos de imagem s√£o permitidos.');
        return;
      }
      if (file.size > MAX_SIZE_MB * 1024 * 1024) {
        alert('Cada imagem deve ter no m√°ximo 10MB.');
        return;
      }
      
      // Create container for this specific file
      var container = document.createElement('div');
      container.className = 'relative group';
      container.setAttribute('data-file-index', startIndex + index);
      
      var imgContainer = document.createElement('div');
      imgContainer.className = 'aspect-square w-full overflow-hidden rounded-lg border-2 border-gray-200 dark:border-gray-600';
      
      var img = document.createElement('img');
      img.className = 'w-full h-full object-cover';
      
      // Create delete button for new images
      var deleteBtn = document.createElement('button');
      deleteBtn.type = 'button';
      deleteBtn.className = 'absolute -top-2 -right-2 bg-red-500 hover:bg-red-600 text-white rounded-full p-1 shadow-lg transition-colors remove-new-image-btn';
      deleteBtn.setAttribute('data-file-index', startIndex + index);
      deleteBtn.setAttribute('aria-label', 'Remove image');
      deleteBtn.innerHTML = `
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      `;
      
      // Add click handler for delete button
      deleteBtn.addEventListener('click', function() {
        container.remove();
      });
      
      // Assemble the container
      imgContainer.appendChild(img);
      container.appendChild(imgContainer);
      container.appendChild(deleteBtn);
      preview.appendChild(container);
      
      // Read the file and set the image source
      var reader = new FileReader();
      reader.onload = function(ev) {
        img.src = ev.target.result;
      };
      reader.readAsDataURL(file);
    });
  }

  // Flags to prevent issues
  var isUsingTemporaryInput = false;
  var mobileModalUsed = false;
  var isProgrammaticClick = false;
  var isProcessingDesktopFiles = false;

  if (input) {
    input.addEventListener('click', function(e) {
      if (window.matchMedia && window.matchMedia('(max-width: 640px)').matches && !isProgrammaticClick && !isUsingTemporaryInput && !mobileModalUsed) {
        // Mobile: show modal
        e.preventDefault();
        showModal();
      }
    });
    
    // Also prevent the original input from being triggered by the label
    var label = document.querySelector('label[for="product-images-input"]');
    if (label) {
      label.addEventListener('click', function(e) {
        if (window.matchMedia && window.matchMedia('(max-width: 640px)').matches && !isProgrammaticClick && !isUsingTemporaryInput && !mobileModalUsed) {
          e.preventDefault();
          showModal();
        }
      });
    }
  }

  // Modal functionality
  var modal = document.getElementById('image-source-modal');
  var cameraRow = document.getElementById('choose-camera-row');
  var galleryRow = document.getElementById('choose-gallery-row');
  var closeModalBtn = document.getElementById('close-image-source-modal');
  var closeModalBtnX = document.getElementById('close-image-source-modal-x');

  if (modal && cameraRow && galleryRow && closeModalBtn && input) {
    
    cameraRow.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();
      e.stopImmediatePropagation();
      console.log('Camera option clicked');
      
      // Prevent multiple clicks
      if (cameraRow._isProcessing) {
        console.log('Camera click already processing, ignoring');
        return;
      }
      cameraRow._isProcessing = true;
      
      hideModal();
      
      // Set flags to prevent original input interference
      isUsingTemporaryInput = true;
      mobileModalUsed = true;
      
      // Completely disable the original input to prevent any interference
      if (input) {
        input.disabled = true;
        input.style.display = 'none';
      }
      
      // Create a temporary file input for camera
      var tempInput = document.createElement('input');
      tempInput.type = 'file';
      tempInput.accept = 'image/*';
      tempInput.capture = 'environment';
      tempInput.style.position = 'absolute';
      tempInput.style.opacity = '0';
      tempInput.style.pointerEvents = 'none';
      
      tempInput.addEventListener('change', function(e) {
        console.log('Mobile camera handler triggered');
        // Process files
        if (e.target.files.length > 0) {
          let files = Array.from(e.target.files);
          
          // Check if adding these files would exceed the limit
          let currentCount = getCurrentImageCount();
          if (currentCount + files.length > MAX_IMAGES) {
            alert('M√°ximo de 20 imagens por item.');
            return;
          }
          
          // Add files to the original input for form submission
          appendFilesToInput(files);
          
          // Process new files using the helper function
          var startIndex = 0;
          processNewFiles(files, startIndex);
        }
        // Clean up
        document.body.removeChild(tempInput);
        isUsingTemporaryInput = false;
        cameraRow._isProcessing = false;
        
        // Re-enable the original input for form submission
        if (input) {
          input.disabled = false;
          input.style.display = '';
        }
      });
      
      document.body.appendChild(tempInput);
      tempInput.click();
    });
    
    galleryRow.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();
      e.stopImmediatePropagation();
      console.log('Gallery option clicked');
      
      // Prevent multiple clicks
      if (galleryRow._isProcessing) {
        console.log('Gallery click already processing, ignoring');
        return;
      }
      galleryRow._isProcessing = true;
      
      hideModal();
      
      // Set flags to prevent original input interference
      isUsingTemporaryInput = true;
      mobileModalUsed = true;
      
      // Completely disable the original input to prevent any interference
      if (input) {
        input.disabled = true;
        input.style.display = 'none';
      }
      
      // Create a temporary file input for gallery
      var tempInput = document.createElement('input');
      tempInput.type = 'file';
      tempInput.accept = 'image/*';
      tempInput.multiple = true;
      tempInput.style.position = 'absolute';
      tempInput.style.opacity = '0';
      tempInput.style.pointerEvents = 'none';
      
      tempInput.addEventListener('change', function(e) {
        console.log('Mobile gallery handler triggered');
        // Process files
        if (e.target.files.length > 0) {
          let files = Array.from(e.target.files);
          
          // Check if adding these files would exceed the limit
          let currentCount = getCurrentImageCount();
          if (currentCount + files.length > MAX_IMAGES) {
            alert('M√°ximo de 20 imagens por item.');
            return;
          }
          
          // Add files to the original input for form submission
          appendFilesToInput(files);
          
          // Process new files using the helper function
          var startIndex = 0;
          processNewFiles(files, startIndex);
        }
        // Clean up
        document.body.removeChild(tempInput);
        isUsingTemporaryInput = false;
        galleryRow._isProcessing = false;
        
        // Re-enable the original input for form submission
        if (input) {
          input.disabled = false;
          input.style.display = '';
        }
      });
      
      document.body.appendChild(tempInput);
      tempInput.click();
    });
    
    closeModalBtn.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();
      hideModal();
    });
    
    if (closeModalBtnX) {
      closeModalBtnX.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        hideModal();
      });
    }
    
    modal.addEventListener('click', function(e) {
      if (e.target === modal) {
        hideModal();
      }
    });
  } else if (modal || cameraRow || galleryRow || closeModalBtn || input) {
    // Only log error if we're on a page that should have these elements
    console.error('Some modal elements not found:', {
      modal: !!modal,
      cameraRow: !!cameraRow,
      galleryRow: !!galleryRow,
      closeModalBtn: !!closeModalBtn,
      input: !!input
    });
  }

  // Handle original file input for desktop
  if (input && !input.hasAttribute('data-desktop-handler-attached')) {
    input.setAttribute('data-desktop-handler-attached', 'true');
    
    var originalInputChangeHandler = function(e) {
      console.log('Desktop handler triggered:', {
        isMobile: window.matchMedia && window.matchMedia('(max-width: 640px)').matches,
        isUsingTemporaryInput: isUsingTemporaryInput,
        mobileModalUsed: mobileModalUsed,
        isProcessingDesktopFiles: isProcessingDesktopFiles
      });
      
      // Only process on desktop (not mobile) and when not using temporary inputs
      if ((!window.matchMedia || !window.matchMedia('(max-width: 640px)').matches) && !isUsingTemporaryInput) {
        // Set flag immediately to prevent duplicate processing
        if (isProcessingDesktopFiles) {
          console.log('Already processing desktop files, skipping');
          return;
        }
        
        isProcessingDesktopFiles = true;
        
        let files = Array.from(e.target.files);
        if (getCurrentImageCount() > MAX_IMAGES) {
          alert('M√°ximo de 20 imagens por item.');
          input.value = '';
          isProcessingDesktopFiles = false;
          return;
        }
        
        // Process each file
        files.forEach(function(file, index) {
          if (!file.type.startsWith('image/')) {
            alert('Apenas arquivos de imagem s√£o permitidos.');
            input.value = '';
            return;
          }
          if (file.size > MAX_SIZE_MB * 1024 * 1024) {
            alert('Cada imagem deve ter no m√°ximo 10MB.');
            input.value = '';
            return;
          }
          
          // Create container for this specific file
          var container = document.createElement('div');
          container.className = 'relative group';
          container.setAttribute('data-file-index', index);
          
          var imgContainer = document.createElement('div');
          imgContainer.className = 'aspect-square w-full overflow-hidden rounded-lg border-2 border-gray-200 dark:border-gray-600';
          
