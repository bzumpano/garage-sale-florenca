<% unless product.sold? %>
  <div class="max-w-sm bg-white border-4 border-pink-200 dark:border-pink-700 rounded-2xl shadow-xl product-card hover:shadow-2xl transition-shadow duration-300 relative overflow-hidden">
    <% if product.images.attached? %>
      <div class="relative w-full">
        <div id="carousel-<%= product.id %>" class="relative w-full h-48" data-carousel="slide">
          <!-- Carousel wrapper -->
          <div class="relative h-48 overflow-hidden rounded-t-2xl">
            <% product.images.each_with_index do |image, idx| %>
              <div class="<%= idx == 0 ? '' : 'hidden' %> duration-700 ease-in-out" data-carousel-item>
                <%= image_tag image.variant(resize_to_limit: [300, 200]), 
                    class: 'absolute block h-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2 object-cover', 
                    alt: "#{product.name} - Image #{idx + 1}" %>
              </div>
            <% end %>
          </div>
          <!-- Slider indicators and controls remain unchanged -->
          <% if product.images.count > 1 %>
            <div class="absolute z-30 flex -translate-x-1/2 bottom-5 left-1/2 space-x-3 rtl:space-x-reverse">
              <% product.images.each_with_index do |_, idx| %>
                <button type="button" 
                        class="w-3 h-3 rounded-full <%= idx == 0 ? 'bg-white dark:bg-gray-800' : 'bg-white/50 dark:bg-gray-800/50 hover:bg-white dark:hover:bg-gray-800' %>" 
                        aria-current="<%= idx == 0 ? 'true' : 'false' %>" 
                        aria-label="Slide <%= idx + 1 %>" 
                        data-carousel-slide-to="<%= idx %>"></button>
              <% end %>
            </div>
            <button type="button" 
                    class="absolute top-0 start-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" 
                    data-carousel-prev>
              <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
                <svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4"/>
                </svg>
                <span class="sr-only">Previous</span>
              </span>
            </button>
            <button type="button" 
                    class="absolute top-0 end-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" 
                    data-carousel-next>
              <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
                <svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                </svg>
                <span class="sr-only">Next</span>
              </span>
            </button>
          <% end %>
        </div>
        <!-- SALE badge -->
        <span class="absolute top-3 left-3 bg-pink-500 text-white text-xs font-bold px-3 py-1 rounded-full shadow-lg z-20 flex items-center gap-1">
          üè∑Ô∏è <%= t('products.index.sale_badge', default: '√Ä venda') %>
        </span>
      </div>
    <% else %>
      <div class="w-full h-48 bg-gray-200 dark:bg-gray-700 rounded-t-2xl flex items-center justify-center">
        <svg class="w-12 h-12 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        <span class="absolute top-3 left-3 bg-pink-500 text-white text-xs font-bold px-3 py-1 rounded-full shadow-lg z-20 flex items-center gap-1">
          üè∑Ô∏è <%= t('products.index.sale_badge', default: '√Ä venda') %>
        </span>
      </div>
    <% end %>
    <div class="p-5">
      <h2 class="mb-2 text-2xl font-extrabold tracking-tight text-blue-900 dark:text-white line-clamp-2 flex items-center gap-2">
        <span class="text-pink-500">üõí</span> <%= product.name %>
      </h2>
      <p class="mb-4 font-normal text-gray-700 dark:text-gray-300 text-base line-clamp-3">
        <%= product.details&.to_plain_text&.truncate(100) || t('products.index.no_description', default: 'Sem descri√ß√£o dispon√≠vel') %>
      </p>
      <div class="flex items-center justify-between mt-4">
        <p class="text-2xl font-bold text-blue-600 dark:text-blue-400 flex items-center gap-1">R$ <%= number_to_currency(product.price, unit: '', separator: ',', delimiter: '.') %> <span class="text-yellow-400">‚≠ê</span></p>
        <%= link_to product_path(product), class: 'inline-flex items-center px-4 py-3 text-lg font-bold text-white bg-blue-700 rounded-full shadow hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 transition-all' do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
          <%= t('products.index.see_details') %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
