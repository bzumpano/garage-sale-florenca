<p style="color: green"><%= notice %></p>

<% content_for :title, "Products" %>

<h1><%= t('products.index.title') %></h1>
<% if user_signed_in? && current_user.admin? %>
  <div style="margin-bottom: 1rem;">
    <%= link_to raw('<i class="fa-solid fa-plus" style="margin-right:0.5em;"></i>' + t('products.index.new')), new_product_path, class: 'button' %>
  </div>
<% end %>
<div id="products-list">
  <% if @products.any? %>
    <%= render @products %>
  <% else %>
    <div class="empty-state">
      <%= t('products.index.no_items', default: 'Nenhum item disponÃ­vel.') %>
    </div>
  <% end %>
</div>
<%= paginate @products, remote: true %>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    let loading = false;
    window.onscroll = function() {
      if (loading) return;
      if ((window.innerHeight + window.scrollY) >= document.body.offsetHeight - 200) {
        const nextPage = document.querySelector('.pagination .next_page');
        if (nextPage && !nextPage.classList.contains('disabled')) {
          loading = true;
          fetch(nextPage.href, { headers: { 'Accept': 'text/javascript' } })
            .then(response => response.text())
            .then(html => {
              const tempDiv = document.createElement('div');
              tempDiv.innerHTML = html;
              document.getElementById('products-list').insertAdjacentHTML('beforeend', tempDiv.querySelector('#products-list').innerHTML);
              nextPage.parentElement.remove();
              loading = false;
            });
        }
      }
    };
  });
</script>
