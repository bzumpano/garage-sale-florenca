        <% end %>
        
        <% 
          sold_active = @tab == 'sold'
          sold_classes = sold_active ? 'border-blue-500 text-blue-600 dark:text-blue-400' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 dark:text-gray-400 dark:hover:text-gray-300'
