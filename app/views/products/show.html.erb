<script>
function initializeProductButtons() {
  // Get all buttons and modal elements
  const markAsSoldBtn = document.getElementById('mark-as-sold-btn');
  const unmarkAsSoldBtn = document.getElementById('unmark-as-sold-btn');
  const deleteProductBtn = document.getElementById('delete-product-btn');
  const modal = document.getElementById('confirm-modal');
  const modalMessage = document.getElementById('modal-message');
  const confirmActionBtn = document.getElementById('confirm-action-btn');

  console.log('Initializing product buttons:', {
    deleteBtn: !!deleteProductBtn,
    modal: !!modal,
    confirmBtn: !!confirmActionBtn
  });

  if (markAsSoldBtn) {
    markAsSoldBtn.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();
      
      // Reset modal styling
      confirmActionBtn.className = 'text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800';
      
      // Set warning icon
      const modalIcon = document.getElementById('modal-icon');
      modalIcon.innerHTML = '<svg class="w-6 h-6 text-yellow-500" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path></svg>';
      
      modalMessage.textContent = '<%= t('products.show.confirm_mark') %>';
      confirmActionBtn.onclick = function() {
        fetch('<%= mark_as_sold_product_path(@product) %>', {
          method: 'POST',
          headers: {
            'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content'),
            'Content-Type': 'application/json',
          },
        }).then(response => {
          if (response.ok) {
            window.location.reload();
          }
        });
      };
      
      showModal();
    });
  }

  if (unmarkAsSoldBtn) {
    unmarkAsSoldBtn.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();
      
      // Reset modal styling
      confirmActionBtn.className = 'text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800';
      
      // Set info icon
      const modalIcon = document.getElementById('modal-icon');
      modalIcon.innerHTML = '<svg class="w-6 h-6 text-blue-500" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path></svg>';
      
      modalMessage.textContent = '<%= t('products.show.confirm_unmark') %>';
      confirmActionBtn.onclick = function() {
        fetch('<%= unmark_as_sold_product_path(@product) %>', {
          method: 'POST',
          headers: {
            'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content'),
            'Content-Type': 'application/json',
          },
        }).then(response => {
          if (response.ok) {
            window.location.reload();
          }
        });
      };
      
      showModal();
    });
  }

  // Modal close functionality
  const closeModalBtn = document.getElementById('close-modal-btn');
  const cancelModalBtn = document.querySelector('[data-modal-hide="confirm-modal"]');
  
  // Universal modal hide function
  function hideModal() {
    if (typeof window.Modal !== 'undefined') {
      const modalInstance = new window.Modal(modal);
      modalInstance.hide();
    } else {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
      modal.style.display = 'none';
      document.body.style.overflow = '';
    }
  }
  
  if (closeModalBtn) {
    closeModalBtn.addEventListener('click', hideModal);
  }
  
  if (cancelModalBtn) {
    cancelModalBtn.addEventListener('click', hideModal);
  }
  
  // Close modal when clicking outside
  modal.addEventListener('click', function(e) {
    if (e.target === modal) {
      hideModal();
    }
  });

  // Universal modal show function
  function showModal() {
    if (typeof window.Modal !== 'undefined') {
      const modalInstance = new window.Modal(modal);
      modalInstance.show();
    } else {
      modal.classList.remove('hidden');
      modal.classList.add('flex');
      modal.style.display = 'flex';
      modal.style.position = 'fixed';
      modal.style.top = '0';
      modal.style.left = '0';
      modal.style.right = '0';
      modal.style.bottom = '0';
      modal.style.zIndex = '9999';
      document.body.style.overflow = 'hidden';
    }
  }

  // Delete product functionality
  if (deleteProductBtn) {
    deleteProductBtn.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();
      
      // Set delete styling (red button)
      confirmActionBtn.className = 'text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800';
      
      // Set danger icon
      const modalIcon = document.getElementById('modal-icon');
      modalIcon.innerHTML = '<svg class="w-6 h-6 text-red-500" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path></svg>';
      
      modalMessage.textContent = '<%= t('products.show.confirm_delete') %>';
      confirmActionBtn.onclick = function() {
        fetch('<%= product_path(@product) %>', {
          method: 'DELETE',
          headers: {
            'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content'),
            'Content-Type': 'application/json',
          },
        }).then(response => {
          if (response.ok) {
            window.location.href = '<%= products_path %>';
          }
        }).catch(error => {
          console.error('Error deleting product:', error);
          alert('Erro ao excluir o produto. Tente novamente.');
        });
      };
      
      showModal();
    });
  }
}

// Initialize on both DOMContentLoaded and Turbo events
document.addEventListener('DOMContentLoaded', initializeProductButtons);
document.addEventListener('turbo:load', initializeProductButtons);
document.addEventListener('turbo:render', initializeProductButtons);
</script>
