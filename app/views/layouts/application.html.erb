    <meta name="keywords" content="brech√≥, venda de garagem, residencial floren√ßa, produtos usados, pre√ßos baixos">
    <meta name="author" content="Venda de Garagem da Aurora">
    
    <!-- Open Graph Meta Tags for Social Media -->
    <meta property="og:title" content="<%= content_for(:title) || 'Venda de Garagem da Aurora - Residencial Floren√ßa' %>">
    <meta property="og:description" content="Venda de Garagem da Aurora - encontre tesouros √∫nicos em nossa venda de garagem! Produtos com pre√ßos especiais para toda a fam√≠lia.">
    <meta property="og:image" content="<%= request.base_url %>/icon.png">
    <meta property="og:image:width" content="512">
    <meta property="og:image:height" content="512">
    <meta property="og:type" content="website">
    <meta property="og:url" content="<%= request.original_url %>">
    <meta property="og:site_name" content="Venda de Garagem da Aurora">
    <meta property="og:locale" content="pt_BR">
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="<%= content_for(:title) || 'Venda de Garagem da Aurora - Residencial Floren√ßa' %>">
    <meta name="twitter:description" content="Venda de Garagem da Aurora - encontre tesouros √∫nicos em nossa venda de garagem! Produtos com pre√ßos especiais para toda a fam√≠lia.">
    <meta name="twitter:image" content="<%= request.base_url %>/icon.png">
    
    <!-- Additional Meta Tags for Mobile -->
    <meta name="theme-color" content="#EC4899">
    <meta name="msapplication-TileColor" content="#EC4899">
    <meta name="apple-mobile-web-app-title" content="Venda de Garagem da Aurora">
    <meta name="application-name" content="Venda de Garagem da Aurora">
    
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>
    <%= yield :meta_tags %>

    <link rel="icon" href="/favicon.png" type="image/png">
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="apple-touch-icon" href="/icon.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "trix", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body class="bg-gradient-to-br from-yellow-50 via-pink-50 to-blue-50 dark:from-yellow-900 dark:via-pink-900 dark:to-blue-900 min-h-screen flex flex-col">
    <!-- Playful Navbar -->
    <nav class="w-full bg-gradient-to-r from-blue-400 via-pink-300 to-yellow-300 dark:from-blue-900 dark:via-pink-900 dark:to-yellow-900 shadow-lg rounded-b-3xl relative z-10">
      <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
        <div class="flex items-center space-x-3 min-w-0">
          <%= link_to root_path, class: 'self-center text-2xl md:text-3xl font-extrabold text-blue-900 dark:text-white flex items-center gap-2 min-w-0' do %>
            <img src="/icon.png" alt="Logo" class="w-10 h-10 inline-block flex-shrink-0" />
            <span class="block leading-tight" title="Venda de Garagem da Aurora">
              Venda de Garagem da Aurora
            </span>
          <% end %>
        </div>
        <div class="flex items-center space-x-3">
          <% if user_signed_in? %>
            <%= link_to destroy_user_session_path, method: :delete, class: 'inline-flex items-center px-4 py-2 text-lg font-bold text-white bg-blue-700 rounded-full shadow hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 transition-all' do %>
              <i class="fas fa-sign-out-alt mr-2"></i>
              <%= t('app.logout') %>
            <% end %>
          <%# 
          else
            = link_to new_user_session_path, class: 'inline-flex items-center px-4 py-2 text-lg font-bold text-white bg-pink-500 rounded-full shadow hover:bg-pink-600 focus:ring-4 focus:ring-pink-300 dark:bg-pink-700 dark:hover:bg-pink-800 dark:focus:ring-pink-800 transition-all' do
              %i.fas.fa-sign-in-alt.mr-2
              = t('app.login')
          %>
          <% end %>
        </div>
      </div>
      <!-- Wavy divider -->
      <div class="w-full -mb-1" style="height: 32px; pointer-events: none;">
        <svg viewBox="0 0 1440 32" fill="none" xmlns="http://www.w3.org/2000/svg" width="100%" height="32">
          <path d="M0 16 Q360 32 720 16 T1440 16 V32 H0 V16Z" fill="#fff" fill-opacity="0.7"/>
        </svg>
      </div>
    </nav>
    <main class="flex-1 container mx-auto px-4 py-6" data-controller="carousel">
      <%= render 'layouts/breadcrumbs' %>
      <!-- Flowbite Alerts -->
      <% if notice %>
        <div id="alert-success" class="flex p-4 mb-4 text-green-800 border border-green-300 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400 dark:border-green-800" role="alert">
          <svg class="flex-shrink-0 w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
          </svg>
          <span class="sr-only">Success</span>
          <div class="ms-3 text-sm font-medium">
            <%= notice %>
          </div>
          <button type="button" class="ms-auto -mx-1.5 -my-1.5 bg-green-50 text-green-500 rounded-lg focus:ring-2 focus:ring-green-400 p-1.5 hover:bg-green-200 inline-flex items-center justify-center h-8 w-8 dark:bg-gray-800 dark:text-green-400 dark:hover:bg-gray-700" data-dismiss-target="#alert-success" aria-label="Close">
            <span class="sr-only">Close</span>
            <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
            </svg>
          </button>
        </div>
      <% end %>
      <% if alert %>
        <div id="alert-danger" class="flex p-4 mb-4 text-red-800 border border-red-300 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400 dark:border-red-800" role="alert">
          <svg class="flex-shrink-0 w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
          </svg>
          <span class="sr-only">Error</span>
          <div class="ms-3 text-sm font-medium">
            <%= alert %>
          </div>
          <button type="button" class="ms-auto -mx-1.5 -my-1.5 bg-red-50 text-red-500 rounded-lg focus:ring-2 focus:ring-red-400 p-1.5 hover:bg-red-200 inline-flex items-center justify-center h-8 w-8 dark:bg-gray-800 dark:text-red-400 dark:hover:bg-gray-700" data-dismiss-target="#alert-danger" aria-label="Close">
            <span class="sr-only">Close</span>
            <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
            </svg>
          </button>
        </div>
      <% end %>
      <%= yield %>
    </main>
    <footer class="w-full bg-gradient-to-r from-blue-400 via-pink-300 to-yellow-300 dark:from-blue-900 dark:via-pink-900 dark:to-yellow-900 rounded-t-3xl shadow-lg py-6 mt-8 text-center text-blue-900 dark:text-white text-lg font-semibold flex flex-col items-center gap-2">
      <span>Feito com <span class="text-pink-500">‚ù§Ô∏è</span> para a Aurora</span>
      <span class="text-2xl">üõíüè∑Ô∏èüéà</span>
    </footer>
  </body>
</html>
