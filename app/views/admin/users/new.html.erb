<h1 class="text-2xl font-bold text-gray-800 mb-6"><%= t('admin.users.new') %></h1>
<%= form_with(model: [:admin, @user], local: true, html: { class: 'space-y-6 bg-white p-6 rounded shadow max-w-lg mx-auto' }) do |form| %>
  <div>
    <%= form.label :email, t('activerecord.attributes.user.email'), class: 'block font-medium text-gray-700 mb-1' %>
    <%= form.email_field :email, class: 'block w-full border border-gray-300 rounded px-3 py-2' %>
  </div>
  <div>
    <%= form.label :password, t('activerecord.attributes.user.password'), class: 'block font-medium text-gray-700 mb-1' %>
    <%= form.password_field :password, class: 'block w-full border border-gray-300 rounded px-3 py-2' %>
  </div>
  <div>
    <%= form.label :password_confirmation, t('activerecord.attributes.user.password_confirmation'), class: 'block font-medium text-gray-700 mb-1' %>
    <%= form.password_field :password_confirmation, class: 'block w-full border border-gray-300 rounded px-3 py-2' %>
  </div>
  <div>
    <%= form.submit t('admin.users.create'), class: 'px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition' %>
  </div>
<% end %>
