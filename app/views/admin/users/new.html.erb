<% content_for :title, t('admin.users.new') %>

<div class="max-w-2xl mx-auto px-4">
  <div class="mb-8">
    <h1 class="text-4xl font-extrabold text-blue-800 dark:text-white mb-3 flex items-center gap-3">
      <span>✨ <%= t('admin.users.new') %></span>
    </h1>
    <p class="text-xl text-gray-600 dark:text-gray-400 font-medium">Adicione um novo usuário administrador ao sistema</p>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded-3xl shadow-2xl border-4 border-blue-200 dark:border-blue-700 p-8">
    <%= form_with(model: [:admin, @user], local: true, html: { class: 'space-y-8' }) do |form| %>
      <div>
        <%= form.label :email, class: 'block mb-3 text-lg font-bold text-blue-800 dark:text-white flex items-center gap-2' do %>
          <span>📧 <%= t('activerecord.attributes.user.email') %></span>
        <% end %>
        <%= form.email_field :email, class: 'bg-gray-50 border-2 border-gray-300 text-gray-900 text-lg rounded-xl focus:ring-4 focus:ring-blue-300 focus:border-blue-500 block w-full p-4 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500', placeholder: 'usuario@exemplo.com' %>
      </div>
      
      <div>
        <%= form.label :password, class: 'block mb-3 text-lg font-bold text-blue-800 dark:text-white flex items-center gap-2' do %>
          <span>🔒 <%= t('activerecord.attributes.user.password') %></span>
        <% end %>
        <%= form.password_field :password, class: 'bg-gray-50 border-2 border-gray-300 text-gray-900 text-lg rounded-xl focus:ring-4 focus:ring-blue-300 focus:border-blue-500 block w-full p-4 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500', placeholder: '••••••••' %>
      </div>
      
      <div>
        <%= form.label :password_confirmation, class: 'block mb-3 text-lg font-bold text-blue-800 dark:text-white flex items-center gap-2' do %>
          <span>🔐 <%= t('activerecord.attributes.user.password_confirmation') %></span>
        <% end %>
        <%= form.password_field :password_confirmation, class: 'bg-gray-50 border-2 border-gray-300 text-gray-900 text-lg rounded-xl focus:ring-4 focus:ring-blue-300 focus:border-blue-500 block w-full p-4 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500', placeholder: '••••••••' %>
      </div>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-between pt-6">
        <%= form.submit class: 'inline-flex items-center justify-center px-8 py-4 text-lg font-bold text-white bg-gradient-to-r from-green-500 to-blue-600 rounded-full shadow-lg hover:scale-105 focus:ring-4 focus:ring-green-300 dark:from-green-600 dark:to-blue-700 dark:focus:ring-green-800 transition-all', style: 'font-size: 1.25rem; min-width: 200px;' do %>
          <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          <span>✨ <%= t('admin.users.create') %></span>
        <% end %>
        
        <%= link_to admin_users_path, class: 'inline-flex items-center justify-center px-8 py-4 text-lg font-bold text-blue-700 bg-white border-2 border-blue-300 rounded-full shadow hover:bg-blue-50 focus:ring-4 focus:ring-blue-300 dark:bg-gray-900 dark:text-blue-200 dark:border-blue-700 dark:hover:bg-blue-800 dark:focus:ring-blue-800 transition-all', style: 'font-size: 1.25rem; min-width: 200px;' do %>
          <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          <span>⬅️ <%= t('common.back') %></span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
