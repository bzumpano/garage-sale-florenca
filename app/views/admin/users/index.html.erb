<% content_for :title, t('admin.users.title') %>

<div class="max-w-7xl mx-auto px-4">
  <div class="mb-8">
    <h1 class="text-4xl font-extrabold text-blue-800 dark:text-white mb-3 flex items-center gap-3">
      <span>üë• <%= t('admin.users.title') %></span>
    </h1>
    <p class="text-xl text-gray-600 dark:text-gray-400 font-medium">Gerencie os usu√°rios administradores do sistema</p>
  </div>

  <div class="mb-8">
    <%= link_to new_admin_user_path, class: 'inline-flex items-center px-8 py-4 text-lg font-bold text-white bg-gradient-to-r from-green-500 to-blue-600 rounded-full shadow-lg hover:scale-105 focus:ring-4 focus:ring-green-300 dark:from-green-600 dark:to-blue-700 dark:focus:ring-green-800 transition-all', style: 'font-size: 1.25rem; min-width: 200px;' do %>
      <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
      </svg>
      <span>‚ú® <%= t('admin.users.new') %></span>
    <% end %>
  </div>

  <div class="bg-white dark:bg-gray-800 shadow-2xl rounded-3xl border-4 border-blue-200 dark:border-blue-700 overflow-hidden">
    <div class="relative overflow-x-auto">
      <table class="w-full text-base text-left text-gray-500 dark:text-gray-400">
        <thead class="text-lg text-gray-700 uppercase bg-gradient-to-r from-blue-100 to-purple-100 dark:from-blue-900 dark:to-purple-900 dark:text-gray-400">
          <tr>
            <th scope="col" class="px-8 py-6 font-bold"><span>üìß <%= t('activerecord.attributes.user.email') %></span></th>
            <th scope="col" class="px-8 py-6 font-bold"><span>‚ö° <%= t('admin.users.actions') %></span></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr class="bg-white border-b-2 border-gray-100 dark:bg-gray-800 dark:border-gray-700 hover:bg-blue-50 dark:hover:bg-blue-900 transition-colors">
              <td class="px-8 py-6 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                <div class="flex items-center">
                  <div class="w-12 h-12 bg-gradient-to-br from-blue-400 to-purple-500 rounded-full flex items-center justify-center mr-4 shadow-lg">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                  </div>
                  <div>
                    <div class="font-bold text-lg text-gray-900 dark:text-white"><%= user.email %></div>
                    <div class="text-base text-gray-500 dark:text-gray-400 mt-1">
                      <% if user.admin? %>
                        <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-bold bg-gradient-to-r from-blue-500 to-purple-600 text-white shadow-lg">
                          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                          </svg>
                          üëë Administrador
                        </span>
                      <% else %>
                        <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-bold bg-gradient-to-r from-gray-400 to-gray-500 text-white shadow-lg">
                          üë§ Usu√°rio
                        </span>
                      <% end %>
                    </div>
                  </div>
                </div>
              </td>
              <td class="px-8 py-6">
                <div class="flex gap-3">
                  <%= link_to edit_admin_user_path(user), class: 'inline-flex items-center px-6 py-3 text-base font-bold text-white bg-gradient-to-r from-yellow-500 to-orange-500 rounded-full shadow-lg hover:scale-105 focus:ring-4 focus:ring-yellow-300 dark:from-yellow-600 dark:to-orange-600 dark:focus:ring-yellow-800 transition-all' do %>
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    <span>‚úèÔ∏è <%= t('common.edit') %></span>
                  <% end %>
                  <% unless user == current_user %>
                    <%= link_to admin_user_path(user), method: :delete, data: { confirm: t('admin.users.confirm_remove') }, class: 'inline-flex items-center px-6 py-3 text-base font-bold text-white bg-gradient-to-r from-red-500 to-pink-500 rounded-full shadow-lg hover:scale-105 focus:ring-4 focus:ring-red-300 dark:from-red-600 dark:to-pink-600 dark:focus:ring-red-800 transition-all' do %>
                      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                      </svg>
                      <span>üóëÔ∏è <%= t('admin.users.remove') %></span>
                    <% end %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
