<h1><%= t('admin.users.title') %></h1>
<%= link_to t('admin.users.new'), new_admin_user_path, class: 'button' %>
<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.user.email') %></th>
      <th><%= t('admin.users.actions') %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td>
          <%= link_to t('common.edit'), edit_admin_user_path(user), class: 'button' %>
          <% unless user == current_user %>
            <%= link_to t('admin.users.remove'), admin_user_path(user), method: :delete, data: { confirm: t('admin.users.confirm_remove') }, class: 'button' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
