<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 via-purple-50 to-pink-50 dark:from-blue-900 dark:via-purple-900 dark:to-pink-900 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <div class="mx-auto h-16 w-16 bg-gradient-to-br from-green-400 to-blue-500 rounded-full flex items-center justify-center mb-6 shadow-lg">
        <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
        </svg>
      </div>
      <h2 class="text-4xl font-extrabold text-blue-800 dark:text-white mb-3 flex items-center justify-center gap-3">
        <span>🔐 <%= t('devise.passwords.edit.title', default: 'Redefinir senha') %></span>
      </h2>
      <p class="text-xl text-gray-600 dark:text-gray-400 font-medium">
        Digite sua nova senha
      </p>
    </div>
    
    <div class="bg-white dark:bg-gray-800 rounded-3xl shadow-2xl border-4 border-blue-200 dark:border-blue-700 p-8">
      <%= form_with(model: resource, as: resource_name, url: password_path(resource_name), html: { class: 'space-y-8' }) do |f| %>
        <%= f.hidden_field :reset_password_token %>
        <div>
          <%= f.label :password, class: 'block mb-3 text-lg font-bold text-blue-800 dark:text-white flex items-center gap-2' do %>
            <span>🔒 Nova senha</span>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'bg-gray-50 border-2 border-gray-300 text-gray-900 text-lg rounded-xl focus:ring-4 focus:ring-blue-300 focus:border-blue-500 block w-full p-4 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500', placeholder: '••••••••' %>
        </div>
        <div>
          <%= f.label :password_confirmation, class: 'block mb-3 text-lg font-bold text-blue-800 dark:text-white flex items-center gap-2' do %>
            <span>🔐 Confirmar nova senha</span>
          <% end %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'bg-gray-50 border-2 border-gray-300 text-gray-900 text-lg rounded-xl focus:ring-4 focus:ring-blue-300 focus:border-blue-500 block w-full p-4 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500', placeholder: '••••••••' %>
        </div>
        <div>
          <%= f.submit t('devise.passwords.edit.change_password', default: 'Alterar senha'), class: 'w-full inline-flex justify-center items-center px-8 py-4 text-lg font-bold text-white bg-gradient-to-r from-green-500 to-blue-600 rounded-full shadow-lg hover:scale-105 focus:ring-4 focus:ring-green-300 dark:from-green-600 dark:to-blue-700 dark:focus:ring-green-800 transition-all', style: 'font-size: 1.25rem;' %>
        </div>
      <% end %>
      <div class="mt-8">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
