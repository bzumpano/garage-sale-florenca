<div class="max-w-md mx-auto bg-white rounded shadow p-8 mt-16">
  <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center"><%= t('devise.sessions.new.sign_in', default: 'Entrar') %></h2>
  <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), html: { class: 'space-y-6' }) do |f| %>
    <div>
      <%= f.label :email, class: 'block font-medium text-gray-700 mb-1' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'block w-full border border-gray-300 rounded px-3 py-2' %>
    </div>
    <div>
      <%= f.label :password, class: 'block font-medium text-gray-700 mb-1' %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'block w-full border border-gray-300 rounded px-3 py-2' %>
    </div>
    <% if devise_mapping.rememberable? -%>
      <div class="flex items-center">
        <%= f.check_box :remember_me, class: 'mr-2' %>
        <%= f.label :remember_me, class: 'text-gray-700' %>
      </div>
    <% end -%>
    <div>
      <%= f.submit t('devise.sessions.new.sign_in', default: 'Entrar'), class: 'w-full px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition font-semibold' %>
    </div>
  <% end %>
  <div class="mt-6 flex flex-col gap-2 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
