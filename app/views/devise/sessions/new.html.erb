<% content_for :title, t('devise.sessions.new.sign_in', default: 'Entrar') %>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 via-purple-50 to-pink-50 dark:from-blue-900 dark:via-purple-900 dark:to-pink-900 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <div class="mx-auto h-16 w-16 bg-gradient-to-br from-blue-400 to-purple-500 rounded-full flex items-center justify-center mb-6 shadow-lg">
        <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
      </div>
      <h2 class="text-4xl font-extrabold text-blue-800 dark:text-white mb-3 flex items-center justify-center gap-3">
        <span>🔐 <%= t('devise.sessions.new.sign_in', default: 'Entrar') %></span>
      </h2>
      <p class="text-xl text-gray-600 dark:text-gray-400 font-medium">
        Acesse sua conta para continuar
      </p>
    </div>
    
    <div class="bg-white dark:bg-gray-800 rounded-3xl shadow-2xl border-4 border-blue-200 dark:border-blue-700 p-8">
      <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), html: { class: 'space-y-8' }) do |f| %>
        <div>
          <%= f.label :email, class: 'block mb-3 text-lg font-bold text-blue-800 dark:text-white flex items-center gap-2' do %>
            <span>📧 Email</span>
          <% end %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'bg-gray-50 border-2 border-gray-300 text-gray-900 text-lg rounded-xl focus:ring-4 focus:ring-blue-300 focus:border-blue-500 block w-full p-4 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500', placeholder: 'seu@email.com' %>
        </div>
        
        <div>
          <%= f.label :password, class: 'block mb-3 text-lg font-bold text-blue-800 dark:text-white flex items-center gap-2' do %>
            <span>🔒 Senha</span>
          <% end %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'bg-gray-50 border-2 border-gray-300 text-gray-900 text-lg rounded-xl focus:ring-4 focus:ring-blue-300 focus:border-blue-500 block w-full p-4 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500', placeholder: '••••••••' %>
        </div>
        
        <% if devise_mapping.rememberable? -%>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: 'w-5 h-5 border-gray-300 rounded bg-gray-50 focus:ring-4 focus:ring-blue-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-blue-600 dark:ring-offset-gray-800' %>
            <%= f.label :remember_me, class: 'ml-3 text-lg font-medium text-gray-900 dark:text-gray-300' do %>
              <span>💭 Lembrar de mim</span>
            <% end %>
          </div>
        <% end -%>
        
        <div>
          <%= f.submit t('devise.sessions.new.sign_in', default: 'Entrar'), class: 'w-full inline-flex justify-center items-center px-8 py-4 text-lg font-bold text-white bg-gradient-to-r from-blue-500 to-purple-600 rounded-full shadow-lg hover:scale-105 focus:ring-4 focus:ring-blue-300 dark:from-blue-600 dark:to-purple-700 dark:focus:ring-blue-800 transition-all', style: 'font-size: 1.25rem;' %>
        </div>
      <% end %>
      
      <div class="mt-8">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
